<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlackHole.View.NewGamePage"
             Title="Create New Game">
    <VerticalStackLayout Spacing="8" Margin="4" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
        <Button Text="Small Game" Command="{Binding NewGameCommand}" CommandParameter="5" FontSize="Large"/>
        <Button Text="Medium Game" Command="{Binding NewGameCommand}" CommandParameter="7" FontSize="Large"/>
        <Button Text="Large Game" Command="{Binding NewGameCommand}" CommandParameter="9" FontSize="Large"/>
    </VerticalStackLayout>
</ContentPage>